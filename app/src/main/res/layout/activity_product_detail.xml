<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Material Design 3 App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:elevation="0dp"
        android:animateLayoutChanges="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="@color/colorPrimary"
            app:statusBarScrim="@color/colorPrimaryDark"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginEnd="20dp"
            app:expandedTitleMarginBottom="28dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:scrimAnimationDuration="300"
            app:scrimVisibleHeightTrigger="180dp">

            <!-- Product Image with ViewPager for multiple images -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Product Image"
                    tools:src="@drawable/ic_product_placeholder" />

            </androidx.cardview.widget.CardView>

            <!-- Gradient Overlay for better text visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay"
                app:layout_collapseMode="parallax" />

            <!-- Material Top App Bar with Back Button -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@android:color/white"
                app:title=""
                app:titleTextColor="@android:color/white"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light">

                <!-- Favorite & Share buttons in Toolbar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp"
                    tools:ignore="RtlSymmetry">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFavorite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_favorite_border"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#40000000"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#40000000"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- Product Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorTextPrimary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp"
                        tools:text="Arduino Uno R3" />

                    <!-- Rating & Reviews Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Rating Stars -->
                        <RatingBar
                            android:id="@+id/ratingBarHeader"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:progressTint="@color/colorOrange" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/tvRatingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Chưa có đánh giá)"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginStart="4dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Sold Count -->
                        <TextView
                            android:id="@+id/tvSold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã bán: 0"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextSecondary" />

                    </LinearLayout>

                    <!-- Price Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_card_modern"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32sp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            tools:text="250.000₫" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Discount Badge -->
                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-15%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/badge_hot"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- Product Info Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Row 1: Category & Brand -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_info_light"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_category"
                                        app:tint="@color/colorPrimary" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Danh mục"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorTextSecondary"
                                        android:layout_marginStart="6dp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    tools:text="Vi điều khiển" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_info_light"
                                android:padding="12dp"
                                android:layout_marginStart="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="4dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_inventory"
                                        app:tint="@color/colorGreen" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kho hàng"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorTextSecondary"
                                        android:layout_marginStart="6dp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvStock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorGreen"
                                    tools:text="Còn 50 sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Row 2: SKU & Warranty -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_info_light"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mã sản phẩm"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvSKU"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"
                                    tools:text="ARD-UNO-R3" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/bg_info_light"
                                android:padding="12dp"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bảo hành"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvWarranty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 tháng"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_display"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả sản phẩm"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Description Text -->
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextSecondary"
                        android:lineSpacingExtra="6dp"
                        android:fontFamily="sans-serif"
                        tools:text="Vi điều khiển Arduino Uno R3 chính hãng với chip ATmega328P, hỗ trợ 14 digital I/O pins và 6 analog inputs. Hoàn hảo cho các dự án IoT và tự động hóa." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Features Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đặc điểm nổi bật"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Features List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Feature Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_info_light"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/colorGreen" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Chính hãng 100%"
                                android:textSize="15sp"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                        <!-- Feature Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_info_light"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/colorBlue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bảo hành 12 tháng"
                                android:textSize="15sp"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                        <!-- Feature Item 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_info_light"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/colorOrange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giao hàng miễn phí"
                                android:textSize="15sp"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                        <!-- Feature Item 4 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_info_light">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Hỗ trợ kỹ thuật 24/7"
                                android:textSize="15sp"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_marginStart="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reviews Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Reviews Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/colorAccent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đánh giá sản phẩm"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0 đánh giá)"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextSecondary" />

                    </LinearLayout>

                    <!-- Rating Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/bg_info_light"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAverageRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent" />

                            <RatingBar
                                android:id="@+id/ratingBarAverage"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="0.5"
                                android:isIndicator="true"
                                android:layout_marginTop="4dp"
                                android:progressTint="@color/colorAccent" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Write Review Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWriteReview"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:text="Viết đánh giá"
                            android:textSize="13sp"
                            app:cornerRadius="21dp"
                            app:icon="@drawable/ic_edit"
                            app:iconSize="18dp"
                            app:backgroundTint="@color/colorPrimary"
                            android:textColor="@android:color/white"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                    <!-- Reviews List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <!-- Empty Reviews State -->
                    <LinearLayout
                        android:id="@+id/layoutEmptyReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_star"
                            android:alpha="0.3"
                            app:tint="@color/colorTextSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa có đánh giá nào"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginTop="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hãy là người đầu tiên đánh giá sản phẩm này"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Related Products Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRelatedProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm liên quan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Horizontal RecyclerView for Related Products -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRelatedProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />

                    <!-- Empty State -->
                    <TextView
                        android:id="@+id/tvNoRelatedProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Không có sản phẩm liên quan"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        android:gravity="center"
                        android:padding="24dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Spacing for bottom buttons -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Material Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quantity Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_marginEnd="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecrement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/colorBorder"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorTextPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncrement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/colorBorder"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorTextPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Total Price Preview -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        tools:text="250.000₫" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add to Cart Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Thêm vào giỏ"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_cart"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="2dp"
                    app:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorPrimary"
                    app:rippleColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Buy Now Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Mua ngay"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    app:rippleColor="@android:color/white"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>