<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thông tin nhận hàng Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin nhận hàng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/bg_edittext_modern"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="#9CA3AF"
                        android:layout_marginBottom="12dp" />

                    <!-- Họ và tên -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Họ và tên"
                        android:inputType="textPersonName"
                        android:background="@drawable/bg_edittext_modern"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="#9CA3AF"
                        android:layout_marginBottom="12dp" />

                    <!-- Số điện thoại -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Spinner
                            android:id="@+id/spinnerCountryCode"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_spinner"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Số điện thoại"
                            android:inputType="phone"
                            android:background="@drawable/bg_edittext_modern"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Địa chỉ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Địa chỉ"
                        android:inputType="textPostalAddress"
                        android:background="@drawable/bg_edittext_modern"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="#9CA3AF"
                        android:layout_marginBottom="12dp" />

                    <!-- Tỉnh thành -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉnh thành"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerProvince"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="12dp" />

                    <!-- Quận huyện -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quận huyện"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="12dp" />

                    <!-- Phường xã -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phường xã"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerWard"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="12dp" />

                    <!-- Ghi chú -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú (tùy chọn)"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etNote"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:hint="Ghi chú (tùy chọn)"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:background="@drawable/bg_edittext_modern"
                        android:padding="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="#9CA3AF" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Vận chuyển Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vận chuyển"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvShippingInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vui lòng nhập thông tin giao hàng"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlue"
                        android:padding="12dp"
                        android:background="@drawable/bg_info_light" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thanh toán Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbCOD"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Thanh toán khi nhận hàng (COD)"
                            android:checked="true"
                            android:textSize="14sp"
                            android:paddingStart="8dp" />

                        <RadioButton
                            android:id="@+id/rbBank"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Chuyển khoản ngân hàng"
                            android:textSize="14sp"
                            android:paddingStart="8dp" />

                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Total and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:elevation="8dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng thanh toán: 0₫"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đặt hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:letterSpacing="0.05"
            android:background="@drawable/bg_button_modern"
            android:elevation="6dp" />

    </LinearLayout>

</LinearLayout>