<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn lý do hủy đơn hàng:"
        android:textSize="15sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/rgReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbChangeMind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi muốn thay đổi địa chỉ giao hàng"
            android:textSize="14sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rbFoundBetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi tìm thấy giá rẻ hơn ở nơi khác"
            android:textSize="14sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rbWrongProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt nhầm sản phẩm"
            android:textSize="14sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rbTooLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian giao hàng quá lâu"
            android:textSize="14sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rbDuplicate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt trùng đơn hàng"
            android:textSize="14sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lý do khác"
            android:textSize="14sp"
            android:padding="12dp" />

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lý do khác"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOtherReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
